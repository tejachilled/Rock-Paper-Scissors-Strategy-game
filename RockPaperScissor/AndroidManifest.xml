<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mc.assign1.rockpaperscissor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_BLUETOOTH_SHARE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="mc.assign1.rockpaperscissor.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mc.assign1.rockpaperscissor.SelectActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="mc.assign1.rockpaperscissor.SELECT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="mc.assign1.rockpaperscissor.BluetoothActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="mc.assign1.rockpaperscissor.BLUETOOTH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="mc.assign1.rockpaperscissor.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="mc.assign1.rockpaperscissor.LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="mc.assign1.rockpaperscissor.GameActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
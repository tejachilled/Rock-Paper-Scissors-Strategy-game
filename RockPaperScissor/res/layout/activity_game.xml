<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:editable="false"
        android:gravity="center"
        android:text="Rock: Swipe Left\n Papper: Swipe Right \n Scissors: Swipe Down"
        android:textSize="@dimen/abc_action_bar_title_text_size" />

</LinearLayout>

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_alignParentLeft="true"
     android:layout_alignParentTop="true" >

     <TextView
         android:id="@+id/textView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/textView2"
         android:layout_alignBottom="@+id/textView2"
         android:layout_centerHorizontal="true"
         android:gravity="center"
         android:text="Loss"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

     <TextView
         android:id="@+id/textView4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/textView3"
         android:layout_alignBottom="@+id/textView3"
         android:layout_alignParentRight="true"
         android:gravity="center"
         android:text="Draw"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

     <TextView
         android:id="@+id/textView5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_alignRight="@+id/textView2"
         android:layout_below="@+id/textView3"
         android:gravity="center"
         android:text="0"
         android:textColor="@android:color/holo_green_dark"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

     <TextView
         android:id="@+id/textView6"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/textView3"
         android:layout_alignRight="@+id/textView3"
         android:layout_below="@+id/textView3"
         android:gravity="center"
         android:text="0"
         android:textColor="@android:color/holo_red_dark"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

     <TextView
         android:id="@+id/textView7"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/textView6"
         android:layout_alignBottom="@+id/textView6"
         android:layout_alignLeft="@+id/textView4"
         android:layout_alignParentRight="true"
         android:gravity="center"
         android:text="0"
         android:textColor="@android:color/holo_blue_dark"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="60dp"
         android:gravity="center"
         android:text="Wins"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

     <TextView
         android:id="@+id/textView8"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/textView3"
         android:layout_marginBottom="57dp"
         android:layout_toLeftOf="@+id/textView3"
         android:text="Your Selection:"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

     <TextView
         android:id="@+id/textView9"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/textView8"
         android:layout_alignTop="@+id/textView8"
         android:layout_marginTop="18dp"
         android:text="Opponent:"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

     <TextView
         android:id="@+id/textView10"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/textView9"
         android:layout_below="@+id/textView9"
         android:text="Result:"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

     <TextView
         android:id="@+id/textView11"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/textView8"
         android:layout_alignBottom="@+id/textView8"
         android:layout_alignLeft="@+id/textView3"
         android:layout_marginLeft="15dp"
         android:gravity="center"
         android:text="------"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

     <TextView
         android:id="@+id/textView12"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/textView9"
         android:layout_alignBottom="@+id/textView9"
         android:layout_alignLeft="@+id/textView11"
         android:gravity="center"
         android:text="------"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

     <TextView
         android:id="@+id/textView13"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/textView10"
         android:layout_alignBottom="@+id/textView10"
         android:layout_alignLeft="@+id/textView12"
         android:gravity="center"
         android:text="------"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="165dp"
         android:layout_height="172dp"
         android:layout_above="@+id/textView8"
         android:src="@drawable/abc_ab_solid_dark_holo" />

     <ImageView
         android:id="@+id/imageView2"
         android:layout_width="165dp"
         android:layout_height="172dp"
         android:layout_above="@+id/textView11"
         android:layout_alignParentRight="true"
         android:layout_alignTop="@+id/imageView1"
         android:layout_toRightOf="@+id/imageView1"
         android:src="@drawable/opponent" />

     <TextView
         android:id="@+id/textView14"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/imageView1"
         android:layout_alignLeft="@+id/textView8"
         android:text="Swipe here"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

     <TextView
         android:id="@+id/textView15"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/imageView2"
         android:layout_toLeftOf="@+id/textView4"
         android:text="Opponent"
         android:textSize="@dimen/abc_action_bar_title_text_size" />

 </RelativeLayout>
    
 </RelativeLayout>